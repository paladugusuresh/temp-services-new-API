# Database connection string for Neon PostgreSQL
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# BEA API key for Regional Price Parity data
BEA_API_KEY=your_bea_api_key_here

# CPI Series ID (default: All Urban Consumers)
CPI_SERIES_ID=CUUR0000SA0

# CPI Baseline (stable reference point - do not change after initial deploy)
CPI_BASELINE_YEAR=2024
CPI_BASELINE_PERIOD=M01

# Admin API key for /admin/refresh endpoint
ADMIN_API_KEY=your_secure_admin_key_here

# Optional: Enable Swagger UI in production
ENABLE_SWAGGER=false

# Optional: Enable CORS for browser clients
ENABLE_CORS=false
CORS_ORIGIN=*
